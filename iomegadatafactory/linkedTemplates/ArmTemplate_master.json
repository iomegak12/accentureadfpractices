{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "iomegadatafactory"
		},
		"AzureSQLConnection_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSQLConnection'"
		},
		"AzureSQLDWConnection_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSQLDWConnection'"
		},
		"AzureBlobStorageConnection_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureBlobStorageConnection'"
		},
		"AzureKVConnection_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://iomegakv.vault.azure.net/"
		},
		"SensorReadingsBlobDataset_properties_typeProperties_fileName": {
			"type": "string",
			"defaultValue": "@dataset().blobName"
		},
		"SensorReadingsBlobDataset_properties_typeProperties_folderPath": {
			"type": "string",
			"defaultValue": "@dataset().blobPath"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas Token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureBlobStorageConnection_connectionString": {
						"value": "[parameters('AzureBlobStorageConnection_connectionString')]"
					},
					"AzureSQLConnection_connectionString": {
						"value": "[parameters('AzureSQLConnection_connectionString')]"
					},
					"AzureSQLDWConnection_connectionString": {
						"value": "[parameters('AzureSQLDWConnection_connectionString')]"
					},
					"AzureKVConnection_properties_typeProperties_baseUrl": {
						"value": "[parameters('AzureKVConnection_properties_typeProperties_baseUrl')]"
					},
					"SensorReadingsBlobDataset_properties_typeProperties_fileName": {
						"value": "[parameters('SensorReadingsBlobDataset_properties_typeProperties_fileName')]"
					},
					"SensorReadingsBlobDataset_properties_typeProperties_folderPath": {
						"value": "[parameters('SensorReadingsBlobDataset_properties_typeProperties_folderPath')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}