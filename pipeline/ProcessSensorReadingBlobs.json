{
	"name": "ProcessSensorReadingBlobs",
	"properties": {
		"activities": [
			{
				"name": "Lookup Processable Blobs",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderStoredProcedureName": "[dbo].[uspGetProcessableBlogs]"
					},
					"dataset": {
						"referenceName": "ProcessableBlobsDataset",
						"type": "DatasetReference"
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "Loop Processable Blobs",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "Lookup Processable Blobs",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('Lookup Processable Blobs').output.value",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "Set Blob Path",
							"type": "SetVariable",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"variableName": "blobPath",
								"value": {
									"value": "@substring(item().Path, 0, sub(indexof(item().path, item().BlobName), 1))",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Set Blob Name",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "Set Blob Path",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"variableName": "blobName",
								"value": {
									"value": "@{item().BlobName}",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Process Sensor Readings to SQL DW",
							"type": "Copy",
							"dependsOn": [
								{
									"activity": "Set Blob Name",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "BlobSource",
									"recursive": false
								},
								"sink": {
									"type": "SqlDWSink",
									"allowPolyBase": false
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"mappings": [
										{
											"source": {
												"name": "Region"
											},
											"sink": {
												"name": "Region",
												"type": "String"
											}
										},
										{
											"source": {
												"name": "Plant"
											},
											"sink": {
												"name": "Plant",
												"type": "String"
											}
										},
										{
											"source": {
												"name": "DeviceId"
											},
											"sink": {
												"name": "DeviceId",
												"type": "Int32"
											}
										},
										{
											"source": {
												"name": "Temperature"
											},
											"sink": {
												"name": "Temperature",
												"type": "Int32"
											}
										},
										{
											"source": {
												"name": "Humidity"
											},
											"sink": {
												"name": "Humidity",
												"type": "Int32"
											}
										},
										{
											"source": {
												"name": "RecordedTime"
											},
											"sink": {
												"name": "RecordedTime",
												"type": "DateTime"
											}
										}
									]
								}
							},
							"inputs": [
								{
									"referenceName": "SensorReadingsBlobDataset",
									"type": "DatasetReference",
									"parameters": {
										"blobPath": {
											"value": "@variables('blobPath')",
											"type": "Expression"
										},
										"blobName": {
											"value": "@variables('blobName')",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "ProcessedRecordsDWDataset",
									"type": "DatasetReference"
								}
							]
						},
						{
							"name": "Prepare DLS Path",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "Set Blob Name",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"variableName": "dlsPath",
								"value": {
									"value": "@concat('/regions/india/', formatDateTime(utcnow(), 'yyyy/MM/dd/hh/mm/ss'))",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Copy the Content to DLS",
							"type": "Copy",
							"dependsOn": [
								{
									"activity": "Prepare DLS Path",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "BlobSource",
									"recursive": false
								},
								"sink": {
									"type": "AzureBlobFSSink"
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "SensorReadingsBlobDataset",
									"type": "DatasetReference",
									"parameters": {
										"blobPath": {
											"value": "@variables('blobPath')",
											"type": "Expression"
										},
										"blobName": {
											"value": "@variables('blobName')",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "ProcessedRecordsDLSDataset",
									"type": "DatasetReference",
									"parameters": {
										"dlsPath": {
											"value": "@variables('dlsPath')",
											"type": "Expression"
										},
										"dlsBlobName": {
											"value": "@{item().Name}",
											"type": "Expression"
										}
									}
								}
							]
						},
						{
							"name": "Update Blob Status",
							"type": "SqlServerStoredProcedure",
							"dependsOn": [
								{
									"activity": "Copy the Content to DLS",
									"dependencyConditions": [
										"Succeeded"
									]
								},
								{
									"activity": "Process Sensor Readings to SQL DW",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"storedProcedureName": "[dbo].[uspUpdateBlobMetadata]",
								"storedProcedureParameters": {
									"dlsLocation": {
										"value": {
											"value": "@concat(variables('dlsPath'), '/', item().Name)",
											"type": "Expression"
										},
										"type": "String"
									},
									"recordId": {
										"value": {
											"value": "@{item().RecordId}",
											"type": "Expression"
										},
										"type": "Int32"
									}
								}
							},
							"linkedServiceName": {
								"referenceName": "AzureSQLConnection",
								"type": "LinkedServiceReference"
							}
						}
					]
				}
			}
		],
		"variables": {
			"blobPath": {
				"type": "String"
			},
			"blobName": {
				"type": "String"
			},
			"dlsPath": {
				"type": "String"
			}
		},
		"annotations": []
	}
}